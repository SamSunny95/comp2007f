@{
    ViewBag.Title = "Appetizer's";
}

<div class="container">
    <div class="col-md-10">

        <br />
        <h1>Appetizer's</h1>
        <br />

     @foreach (var Appetizer in Model)
     {
         <div class="col-sm-6 col-md-3">
             <div class="thumbnail">
                 <img src="@Appetizer.ThumbNail" class="img-thumbnail" />
             </div>

             <div class="caption">
                 <h3>@Appetizer.Name</h3>
                 <h4>@Appetizer.Price</h4>
                 <p>@Appetizer.ShortDesc</p>
             </div>
         </div>
     }
    </div>
</div>

